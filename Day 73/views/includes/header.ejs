<header id="main-header">
    <nav>
        <ul>
            <li><a href="/">Home</a></li>

            <!-- Not Logged In -->
            <% if(!locals.isAuth) { %>
            <li><a href="/signup">Signup</a></li>
            <li><a href="/login">Login</a></li>
            <% } %>

            <!-- If Admin -->
            <% if(locals.isAdmin) { %>
            <li><a href="/admin">Admin</a></li>
            <% } %>

            <!-- Logged In -->
            <% if(locals.isAuth) { %>
            <li><a href="/profile">Profile</a></li>
            <li>
                <form action="/logout" method="POST">
                    <button>Logout</button>
                </form>
            </li>
            <% } %>
        </ul>
    </nav>
</header>
